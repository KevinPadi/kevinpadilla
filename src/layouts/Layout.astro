---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
ClientRouter
---

<html lang="es">
	<head>
		<!-- Configuración básica -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Kevin Padilla | Desarrollador Full Stack</title>

		<!-- Descripción y SEO -->
		<meta name="theme-color" content="#0a0a0a" />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph / Social -->
		<meta property="og:type" content="website" />
		<meta
			property="og:title"
			content="Kevin Padilla | Desarrollador Full Stack"
		/>
		<meta property="og:url" content="https://kevin-padilla.vercel.app/" />
		<meta
			property="og:image"
			content="https://kevin-padilla.vercel.app/open_graph_image.webp"
		/>
		<meta
			property="og:description"
			content="Soy Kevin Padilla, desarrollador Full Stack de Uruguay, especializado en frontend con React. Con experiencia en Node.js, Python y bases de datos, creo aplicaciones web dinámicas y responsivas con pasión y dedicación."
		/>

		<!-- Fuentes -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Geist:wght@100..900&display=swap" rel="stylesheet">


		<!-- Iconos -->
		<link rel="icon" href="/favicon.ico" sizes="any" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<ClientRouter />
	</head>

	<body class="relative grid min-h-screen grid-cols-[1fr_1rem_auto_1rem_1fr] md:grid-cols-[1fr_2rem_auto_2rem_1fr] grid-rows-[1fr_1px_auto_1px_1fr] bg-white [--pattern-fg:var(--color-gray-950)]/5 dark:bg-[#09090b] dark:[--pattern-fg:var(--color-white)]/10 overflow-x-hidden">
		<div class="fixed top-0 right-0 w-full h-20 bg-gradient-to-b from-[#09090b] to-transparent z-50 pointer-events-none" />
		<Analytics />
		<div class="col-start-3 row-start-3 max-w-2xl">
			<slot />
		</div>
		<div class="relative -right-px col-start-2 row-span-full row-start-1 border-r md:border-x border-(--pattern-fg) md:bg-[image:repeating-linear-gradient(315deg,_var(--pattern-fg)_0,_var(--pattern-fg)_1px,_transparent_0,_transparent_50%)] bg-[size:10px_10px] bg-fixed"></div>
		<div class="relative -left-px col-start-4 row-span-full row-start-1 border-l md:border-x border-x-(--pattern-fg) md:bg-[image:repeating-linear-gradient(315deg,_var(--pattern-fg)_0,_var(--pattern-fg)_1px,_transparent_0,_transparent_50%)] bg-[size:10px_10px] bg-fixed"></div>
	</body>
</html>
