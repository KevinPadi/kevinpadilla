---
import { ClientRouter } from "astro:transitions";
import VerticalDashedLine from "../components/icons/vertical-dashed-line.astro";
import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
ClientRouter
---

<html lang="es">
	<head>
		<!-- Configuración básica -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>Kevin Padilla | Desarrollador Full Stack</title>

		<!-- Descripción y SEO -->
		<meta name="theme-color" content="#0a0a0a" />
		<meta name="generator" content={Astro.generator} />

		<!-- Open Graph / Social -->
		<meta property="og:type" content="website" />
		<meta
			property="og:title"
			content="Kevin Padilla | Desarrollador Full Stack"
		/>
		<meta property="og:url" content="https://kevin-padilla.vercel.app/" />
		<meta
			property="og:image"
			content="https://kevin-padilla.vercel.app/open_graph_image.webp"
		/>
		<meta
			property="og:description"
			content="Soy Kevin Padilla, desarrollador Full Stack de Uruguay, especializado en frontend con React. Con experiencia en Node.js, Python y bases de datos, creo aplicaciones web dinámicas y responsivas con pasión y dedicación."
		/>

		<!-- Fuentes -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Geist+Mono:wght@100..900&display=swap" rel="stylesheet">


		<!-- Iconos -->
		<link rel="icon" href="/favicon.ico" sizes="any" />
		<link rel="icon" href="/favicon.svg" type="image/svg+xml" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />
		<link rel="manifest" href="/site.webmanifest" />
		<ClientRouter />
	</head>

	<body class="bg-neutral-950 relative">
		<Analytics />
		<div class="w-full h-20 bg-gradient-to-b from-neutral-950 from-20% to-transparent fixed top-0 right-0 z-40" />
		<div class="w-full h-20 bg-gradient-to-t from-neutral-950 from-20% to-transparent fixed bottom-0 right-0 z-40" />
		<div class="mx-auto max-w-2xl relative" >
			<VerticalDashedLine class="right-0" />
			<VerticalDashedLine />
			<slot />
		</div>
	</body>
</html>
